<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="12dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_police_svg_icon" />
    </androidx.cardview.widget.CardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="1dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="130dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_CityOfficerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City Officer Name"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/item_CityOfficerDesignation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designation" />

            </LinearLayout>

            <TextView
                android:id="@+id/CityOfficerPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="90dp"
                android:text="Police Station:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_CityOfficerPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="90dp"
                android:layout_toEndOf="@+id/CityOfficerPS"
                android:ellipsize="end"
                android:text=""
                android:textSize="14sp" />

            <TextView
                android:id="@+id/CityOfficerMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_CityOfficerPS"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Mobile:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_CityOfficerMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_CityOfficerPS"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/imgCallCityOfficer"
                android:layout_toEndOf="@+id/CityOfficerMobile"
                android:ellipsize="end"
                android:text=""
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imgCallCityOfficer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/item_CityOfficerPS"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_baseline_call_24"
                app:tint="@color/blue" />

            <TextView
                android:id="@+id/CityOfficerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgCallCityOfficer"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Email:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_CityOfficerEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgCallCityOfficer"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/imgEmailCityOfficer"
                android:layout_toEndOf="@+id/CityOfficerEmail"
                android:ellipsize="end"
                android:text=""
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imgEmailCityOfficer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/imgCallCityOfficer"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_baseline_email_24"
                app:tint="@color/blue" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>